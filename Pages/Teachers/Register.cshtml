@page
@model Test.Me.Pages.Teachers.RegisterModel
@{
    Layout = "_EmptyLayout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center">Teacher Registration</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row">
                            <label for="Tname" class="col-sm-4 col-form-label text-black">Name:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Tname" name="Tname" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Temail" class="col-sm-4 col-form-label text-black">Email:</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" id="Temail" name="Temail" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Tpassword" class="col-sm-4 col-form-label text-black">Password:</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="Tpassword" name="Tpassword" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </form>
                    <p class="mt-3 text-center">Already have an account? <a href="/Teachers/Login">Login here</a></p>
                    <!-- Button to go to Student Registration Page -->
                    <a href="/Students/Register" class="btn btn-secondary btn-block">Go to Student Registration</a>
                </div>
            </div>
        </div>
    </div>
</div>
